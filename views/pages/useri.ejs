        <script type="text/javascript" src="/resurse/js/admin_retrograd.js"></script>

    </head>
    <body>
    <%- include("../fragments/header") %>

    <main>
    <div class="afisaj">
        <h2>Useri</h2>

		<table id="useri">
		  <tr>
			<th>Username</th><th>Nume</th><th>Rol</th><th>Promoveaza/Retrogradeaza</th>
		  </tr>

		  <% for (var i = 0; i < useri.length; i++) { 
				if(useri[i].rol=="comun"){
				%>
				<tr>
				  <td><%= useri[i].username %></td>
				  <td><%= useri[i].nume + " " + useri[i].prenume[0] %></td>
				  <td><%= useri[i].rol %></td>
				  <td> <button class="promote" value="<%= useri[i].id %>">Promoveaza/Retrogradeaza</button> </td>
				</tr> 
   
				<% } %>			
		  <% } %>
		</table>
		
		<p>Sterge utilizator</p>
		<form id="sterge" method="post" action="/sterge_utiliz">
			<label>
				Id: <input type="text" name="id_utiliz" value="">
			</label>
			
			<input type="submit" value="Submit">
		</form>
	</div>
</main>


    <%- include("../fragments/footer") %>

</body>
</html>